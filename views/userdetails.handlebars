<header>
   <h2>User Details</h2>
</header>
<div class="container-details">
   <div>
      <div class="row-details">
         <span class="title-text">Name: </span>{{selectedUser.firstName}} {{selectedUser.lastName}}
      </div>
      <div class="row-details">
         <span class="title-text">Username</span>: {{selectedUser.username}}
      </div>
      <div class="row-details">
         <span class="title-text">Email</span>: {{selectedUser.email}}
      </div>
   </div>
   <div class = "vr-seperator"></div>
   <div>
      {{#unless isLoggedInUser}}
      <div class="row-details">
         {{#if selectedUser.alreadyFollowing}}
         <a href="/unfollowUser/{{selectedUser.id}}"><i class='fas fa-user-check'></i> <span style="margin-left: 10px">Unfollow {{selectedUser.firstName}} now</span></a>
         {{else}}
         <a href="/followUser/{{selectedUser.id}}"><i class='fas fa-user-alt'></i><span style="margin-left: 10px">Start following</span></a>
         {{/if}}
      </div>
      {{/unless}}   
      <div class="row-details">
         <span class="title-text">Following:</span> {{selectedUser.following.length}}
      </div>
   </div>
</div>